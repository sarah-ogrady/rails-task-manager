<h2>My tasks:</h2>
<%= link_to 'Add a new task', tasks_new_path, class: 'add btn btn-warning' %>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task.id), class: 'link' %>
    </li>
  <% end %>
</ul>


